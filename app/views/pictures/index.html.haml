- if @pictures.any?
  - @pictures.reverse.each do |picture|
    %div.img_container
      %ul.img_info
        %li.username= picture.user.username
        %li.timestamp= picture.timestamp
      = image_tag picture.image.url(:medium)
      %div.caption_container
        %h4= picture.caption
        - if current_user && current_user.id == picture.user_id
          = link_to image_tag('/images/edit.png', :class => "edit"), edit_picture_path(picture)
          = link_to image_tag('/images/delete.png', :class => "delete"), picture_path(picture), method: :delete
      %p= link_to "Comment", new_picture_comment_path(picture)
      %p= link_to "Like picture", picture_likes_path(picture), class: 'likes-link'
      %p
        %span.likes_count= picture.likes.count
        = 'like'.pluralize picture.likes.count

      - if picture.comments.any?
        %ul
          - picture.comments.each do |comment|
            %li= "#{comment.user.username} #{comment.thoughts}"

- else
  %h2 No pictures yet!

- if current_user
  = link_to "Add a new picture", new_picture_path